import java.util.ArrayList;

public class Helado {
    public int id;
    private float precio;
    private ArrayList<String> sabores;
    private int tipo; // Por ejemplo, 1: Cono, 2: Vaso, 3: Tarrina

    public Helado(int id, float precio, ArrayList<String> sabores, int tipo) {
        this.id = id;
        this.precio = precio;
        this.sabores = sabores;
        this.tipo = tipo;
    }

    // Getters
    public int getId() {
        return id;
    }

    public float getPrecio() {
        return precio;
    }

    public ArrayList<String> getSabores() {
        return sabores;
    }

    public int getTipo() {
        return tipo;
    }

    // Setters
    public void setPrecio(float precio) {
        this.precio = precio;
    }

    public void setSabores(ArrayList<String> sabores) {
        this.sabores = sabores;
    }

    public void setTipo(int tipo) {
        this.tipo = tipo;
    }

    @Override
    public String toString() {
        return "Helado [ID=" + id + ", Precio=" + precio + ", Sabores=" + sabores + ", Tipo=" + tipo + "]";
    }
}
